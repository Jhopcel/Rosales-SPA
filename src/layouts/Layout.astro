---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Kadwa&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Inknut+Antiqua:wght@300&display=swap');
    main{
    color: #000000;
}
	h1{
		margin-block-start: 0;
		margin-block-end: 0;
		margin-inline-start: 0px;
    	margin-inline-end: 0px;
		font-size: unset;
		font-weight: unset;
		display: unset;
	}
	h2 {
    display: block;
    font-size: 1;
    margin-block-start: 0;
    margin-block-end: 0;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: unset;
}
	html {
		font-family: system-ui, sans-serif;
		background: #FDFBF6;
		background-size: 224px;
	}
	.info-section{
		margin-top: 10rem;
		background-color: #003249;
		display: flex;
		color: #ffffff;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
		gap: 4rem;
		padding: 2rem;
		font-family: 'Inknut Antiqua', serif;
	}
	@keyframes fade-in {
		from {
			margin-left: 100%;
			opacity: 0;
		}
		to {
			margin-left: 0%;
			opacity: 1;
		}
	}
	@keyframes fade-out {
		from {
			margin-right: 100%;
			opacity: 0;
		}
		to {
			margin-right: 0%;
			opacity: 1;
		}
	}
	.section-paragraph{
		max-width: 800px;
	}
	.section-paragraph h2{
		font-size: 32px;
	}
	.paragraph-info{
		font-size: 14px;
	}
	.image-info-section{
		align-self: flex-end;
	}
	.image-info-section img{
		max-width: 100%;
		max-height: 340px;
		aspect-ratio: 250/141;
		align-self: flex-end;
		object-fit: cover;
	}

	.prefer{
		margin-top: 8rem;
		background-color: #FDFBF6 ;
		/* #fff8e9 */
		color: #000000;
		display: flex;
		flex-direction: row-reverse;
	}

	@media screen and (max-width: 768px){
		.info-section{
		margin-top: 8rem;
		gap: 1rem;
		padding: 2rem;
		}
		.section-paragraph h2{
			font-size: 28px;
			text-align: center;
		}
	}
	.buttom-tb{
		margin-top: 20px;
		border: 0;
		color: #ffffff;
		border-top: #ffffff 2px solid;
		border-bottom: #ffffff 2px solid;
		width: 90px;
		height: 35px;
		background-color: transparent;
		font-size: 20px;
		transition: all .2s cubic-bezier(0.09, 0.8, 0.58, 1);
		cursor: pointer;
	}
	.buttom-tb:hover{
		border-left: #ffffff 2px solid;
		border-right: #ffffff 2px solid;
		transform: scale(1.1);
	}
</style>
