---
interface Props {
	title: string;
}

const { title } = Astro.props;
---


<div class="title-for-page">
    <p>{title}</p>
</div>


<style>
.title-for-page{
    font-family: 'Inknut Antiqua', serif;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30px;
    margin-top: 30px;
    margin-bottom: 30px;
}
p{
    border-bottom: #000 2px solid;
}
@media screen and (max-width: 768px){
    .title-for-page{
    font-size: 22px;
}
	}
</style>