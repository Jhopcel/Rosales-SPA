---
import Layout from '../layouts/Layout.astro';
import Title from '../components/Title.astro';
import Form from '../components/Form.astro';
import Banner from '../components/Banner.astro';
---

<Layout title="Pagina principal Rosales SPA">
	<main>
		<Banner title="¡Mira nuestros últimos trabajos!"
		text="Ofrecemos servicios de calidad a todos nuestros clientes, siempre cumpliendo a los plazos estimados y con gran profesionalismo." 
		button="ver"
		urlImage="/pages-img/banner-index2.jpg"/>
		<section class="container-section-service">
			<Title title="SERVICIOS" />
			<div class="container-service-items">
				<div class="service-items">
					<img src="public/pages-img/renovation.png" alt="">
					<p>TERMINACIONES</p>
					<a href="">Ver más</a>
				</div>
				<div class="service-items">
					<img src="public/pages-img/varnish.png" alt="">
					<p>DECORACIONES</p>
					<a href="">Ver más</a>
				</div>
				<div class="service-items">
					<img src="public/pages-img/paint-roller.png" alt="">
					<p>PINTURA</p>
					<a href="">Ver más</a>
				</div>
			</div>
		</section>
		<section class="our-works-container">
			<Title title="NUESTROS TRABAJOS" />
			<div class="work-image">
				<div class="work-info">
