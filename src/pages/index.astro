<style>
	.container-section-service{
		margin-top: 10rem;
	}
	.container-service-items{
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 10em;
		margin: 50px;
		flex-wrap: wrap;
	}
	.service-items{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 250px;
		height: 320px;
		/* box-shadow:  0px 0px 10px #002b6865,
            0px 0px 10px #002b6875; */
		font-family: 'Inknut Antiqua', serif;
		gap: 1rem;
		font-size: 1rem;
	}
	.service-items a{
		font-size: 16px;
		color: #003249;
	}
	.service-items a:hover{
		color: #007EA7;
		transition: all .2s ease;
	}
	.our-works-container{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		margin-top: 5rem;
		padding: 1.5rem;
	}
	.work-image{
		background-image: url('public/pages-img/valle-grande.jpg');
		background-size: cover;
		background-position: center;
		display: flex;
		justify-content: left;
		align-items: center;
		padding: 3rem;
	}
	.work-info{
		max-width: 800px;
		background-color: #00000085;
		height: 400px;
		font-family: 'Inknut Antiqua', serif;
		color: #ffffff;
		padding: 2rem;
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		justify-content: center;
		overflow: hidden;
	}
	.work-info h2{
		font-size: 2rem;
	}
	.work-info p{
		font-size: 1rem;
		overflow: hidden;
		text-wrap: balance;
	}
	@media screen and (max-width: 768px){
		.container-section-service{
		margin-top: 4rem;
	}
		.container-service-items{
		gap: 1rem;
	}
	.our-works-container{
		margin-top: 3rem;
	}
		.work-image{
		padding: 1.5rem;
	}
		.work-info{
		padding: 1.5rem;
	}
		.work-info h2{
	font-size: 1.5rem;
	}
		.work-info p{
		font-size: 0.8rem;
		overflow: visible;
	}
	}
	.bottom{
		align-self: flex-end;
	}
	.form-section-main{
		margin-top: 6rem;
	}
    .form-section{
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: row;
		flex-wrap: wrap;
		margin-top: 1rem;
		margin-bottom: 4rem;
		padding: 2rem;
		gap: 8rem;
    }
    .section-info-contact{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: #ffffff;
        background-color: #003249;
        width: 300px;
        height: 300px;
        gap: 1rem;
        box-sizing: border-box;
        padding: 2rem;
        align-self: flex-start;
    }
    .info-contact{
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-direction: column;
        width: 100%;
    }
    .info-contact h2{
        font-family: 'Inknut Antiqua', serif;
    }
	.whatsapp-icon{
		position: fixed;
		width: 4rem;
		height: 4rem;
		bottom: 0;
		right: 0;
		margin: 1rem;
		z-index: 100;
	}
	.whatsapp-icon img{
		width: 100%;
		height: 100%;
	}
</style>
