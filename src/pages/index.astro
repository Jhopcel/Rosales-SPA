        <section class="form-section-main">
			<Title title='CONTACTO' />
			<div class="form-section">
				<div class="section-info-contact">
					<div class="info-contact">
						<h2>TELEFONO</h2>
						<span>+56 9 3223 9223</span>
					</div>
					<div class="info-contact">
						<h2>EMAIL</h2>
						<span>contacto@rosalesspa.cl</span>
